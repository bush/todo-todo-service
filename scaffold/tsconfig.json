{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "sourceMap": true
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "**/*.ts"
  ]
}
